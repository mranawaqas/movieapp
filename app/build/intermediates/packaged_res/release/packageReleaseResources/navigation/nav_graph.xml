<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.moviesapp.presentation.movielist.MovieListFragment"
        android:label="Studio Ghibli Movies"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/action_movieList_to_movieDetail"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.moviesapp.presentation.moviedetail.MovieDetailFragment"
        android:label="Movie Details"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="movieId"
            app:argType="string" />
    </fragment>

</navigation>